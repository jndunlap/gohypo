# =============================================================================
# GoHypo "Strategic Elite" Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (Layer 3: Success-Only Persistence)
# -----------------------------------------------------------------------------
# PostgreSQL connection for Universal Law storage
DATABASE_URL=postgres://gohypo_admin:secure_local_pass@db:5432/gohypo?sslmode=disable
DATABASE_URL=postgres://gohypo_user:gohypo_password@localhost:5432/gohypo?sslmode=disable

# Database credentials (for Docker Compose)
DB_USER=gohypo_admin
DB_PASS=secure_local_pass
DB_NAME=gohypo
DB_HOST=db
DB_PORT=5432

# -----------------------------------------------------------------------------
# Ephemeral Storage (Layers 0-2: High-Speed Processing)
# -----------------------------------------------------------------------------
# Valkey (Redis-compatible) for temporary hypothesis processing
VALKEY_URL=valkey:6379
REDIS_URL=valkey:6379  # Backward compatibility

# -----------------------------------------------------------------------------
# AI & Research Configuration
# -----------------------------------------------------------------------------
# OpenAI API for hypothesis generation
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4-turbo-preview

# Research parameters
PROMPTS_DIR=./prompts
EXCEL_FILE=./final_dataset.csv

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Server settings
GIN_MODE=release
PORT=8080

# Performance profiling (pprof server)
PPROF_PORT=6060
PPROF_ENABLED=true

# -----------------------------------------------------------------------------
# Development & Debugging
# -----------------------------------------------------------------------------
# Database admin (pgAdmin)
PGADMIN_EMAIL=admin@gohypo.local
PGADMIN_PASS=admin123

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Production Overrides
# -----------------------------------------------------------------------------
# For production, use these instead:
# DATABASE_URL=postgres://user:pass@prod-host:5432/gohypo?sslmode=require
# REDIS_URL=redis://prod-redis:6379
# GIN_MODE=release
# LOG_LEVEL=warn